<header class="navbar bg-gradient">
  <div class="navbar-brand">
    <%= link_to root_path, class: "navbar-item" do %>
      <%= image_tag "dwellingly_logo_white.png", alt: "dwellingly logo" %>
    <% end %>
  </div>
</header>

<section id="change_password">
  <h2 class="page-title"><%= t "devise.invitations.edit.header" %></h2>

  <%= form_for(resource, as: resource_name, url: account_invitation_path, html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>
    <% if f.object.class.require_password_on_accepting %>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t("devise.invitations.edit.submit_button"), class: "button is-rounded is-primary"  %>
    </div>
  <% end %>
</section>
